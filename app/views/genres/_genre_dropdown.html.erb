<a href="#" class="scroll-dropdown" data-dropdown="hover1" data-options="is_hover:true; hover_timeout:500">Search by Genre</a>
<ul id="hover1" class="small f-dropdown" data-dropdown-content>
  <% all_genres_in_use.sort_by(&:group_id).each do |genre| %>
    <% color = genre.group_color %>
    <li> <%= link_to genre.name.titleize, genre_path(genre), { style: "background-color:rgba(#{color}, 0.7)" , class: "css-class" } %> </li>
  <% end %>
</ul>
